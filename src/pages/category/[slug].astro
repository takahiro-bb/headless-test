---
// src/pages/category/[slug].astro
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro'; // ★インポート

const { slug } = Astro.params;

const response = await fetch(import.meta.env.WORDPRESS_API_URL, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
      query GetPostsByCategory($slug: ID!) {
        category(id: $slug, idType: SLUG) {
          name
          posts(first: 100) {
            nodes {
              id
              title
              slug
              date
              featuredImage {
                node {
                  sourceUrl
                  altText
                }
              }
            }
          }
        }
      }
    `,
    variables: { slug: slug },
  }),
});

const { data } = await response.json();
const categoryName = data?.category?.name || "Category";
const posts = data?.category?.posts?.nodes || [];

// ★パンくず用のデータを作成
const breadcrumbItems = [
  { name: categoryName, href: `/category/${slug}` }
];
---

<Layout title={`${categoryName} | My Headless Site`}>
  {/* ★パンくずを表示 */}
  <Breadcrumbs items={breadcrumbItems} />

  <main>
    <section class="p-category-head">
      <div class="p-category-head__inner">
        <p class="c-category-sub">Category</p>
        <h1 class="c-title">{categoryName}</h1>
      </div>
    </section>

    <div class="p-post-list-container">
      <div class="l-container">
        {posts.length > 0 ? (
          <div class="p-post-list">
            {posts.map((post) => (
              <article class="p-post-card">
                <a href={`/posts/${post.slug}`} class="p-post-card__link">
                  <div class="p-post-card__img">
                    {post.featuredImage ? (
                      <img 
                        src={post.featuredImage.node.sourceUrl} 
                        alt={post.featuredImage.node.altText || post.title} 
                      />
                    ) : (
                      <div class="c-no-image">No Image</div>
                    )}
                  </div>
                  <div class="p-post-card__content">
                    <time class="p-post-card__date">{new Date(post.date).toLocaleDateString()}</time>
                    <h2 class="p-post-card__title">{post.title}</h2>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="c-empty-message">
            <p>記事はまだありません。</p>
          </div>
        )}
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
.p-category-head {
  background: #f8f9fa;
  padding: 60px 20px;
  text-align: center;
  margin-bottom: 40px;
}

.c-category-sub {
  font-size: 0.8rem;
  font-weight: bold;
  color: #aaa;
  text-transform: uppercase;
}

.c-title {
  font-size: 2rem;
  margin-top: 10px;
}

.p-post-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  margin-bottom: 80px;

  .p-post-card {
    border: 1px solid #eee;
    &__link {
      text-decoration: none;
      color: inherit;
    }
    &__img {
      aspect-ratio: 16 / 9;
      overflow: hidden;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
    &__content {
      padding: 15px;
    }
    &__date {
      font-size: 0.8rem;
      color: #999;
    }
    &__title {
      font-size: 1rem;
      margin-top: 5px;
    }
  }
}
</style>
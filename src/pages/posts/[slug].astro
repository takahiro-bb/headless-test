---
// src/pages/posts/[slug].astro
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const { slug } = Astro.params;

// GraphQLで記事の詳細データとカテゴリー情報を取得
const response = await fetch(import.meta.env.WORDPRESS_API_URL, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
      query GetPostBySlug($slug: ID!) {
        post(id: $slug, idType: SLUG) {
          title
          content
          date
          categories {
            nodes {
              name
              slug
            }
          }
          featuredImage {
            node {
              sourceUrl
              altText
            }
          }
        }
      }
    `,
    variables: { slug: slug },
  }),
});

const { data } = await response.json();
const post = data?.post;

// 記事が見つからない場合の処理
if (!post) {
  return Astro.redirect('/404');
}

// パンくずリスト用のデータ作成
// 記事が複数のカテゴリーを持つ場合は、最初の1つを表示
const mainCategory = post.categories?.nodes[0];
const breadcrumbItems = [
  { name: mainCategory?.name || '未分類', href: `/category/${mainCategory?.slug || ''}` },
  { name: post.title, href: `/posts/${slug}` }
];
---

<Layout title={`${post.title} | My Headless Site`}>
  {/* パンくずリスト */}
  <Breadcrumbs items={breadcrumbItems} />

  <article class="p-entry">
    <header class="p-entry__header">
      <div class="l-container">
        {/* カテゴリーバッジ */}
        <div class="p-entry__categories">
          {post.categories?.nodes.map((cat) => (
            <a href={`/category/${cat.slug}`} class="c-category-label">
              {cat.name}
            </a>
          ))}
        </div>
        
        <h1 class="p-entry__title">{post.title}</h1>
        <time class="p-entry__date" datetime={post.date}>
          {new Date(post.date).toLocaleDateString()} 公開
        </time>

        {/* アイキャッチ画像 */}
        {post.featuredImage && (
          <div class="p-entry__thumbnail">
            <img 
              src={post.featuredImage.node.sourceUrl} 
              alt={post.featuredImage.node.altText || post.title} 
            />
          </div>
        )}
      </div>
    </header>

    <div class="p-entry__body">
      <div class="l-container">
        {/* WordPressのコンテンツ（HTML）を注入 */}
        <div class="c-content" set:html={post.content} />
      </div>
    </div>

    <footer class="p-entry__footer">
      <div class="l-container">
        <a href="/posts/list" class="c-btn">記事一覧に戻る</a>
      </div>
    </footer>
  </article>
</Layout>

<style lang="scss">
.p-entry {
  padding-bottom: 80px;

  &__header {
    padding: 40px 0;
    text-align: center;
  }

  &__categories {
    margin-bottom: 15px;
  }

  &__title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    line-height: 1.4;
    margin-bottom: 15px;
  }

  &__date {
    display: block;
    font-size: 0.9rem;
    color: #888;
    margin-bottom: 30px;
  }

  &__thumbnail {
    margin-top: 40px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    
    img {
      width: 100%;
      height: auto;
      vertical-align: bottom;
    }
  }

  &__body {
    padding: 40px 0;
  }

  &__footer {
    margin-top: 60px;
    text-align: center;
    border-top: 1px solid #eee;
    padding-top: 40px;
  }
}

// WordPressから来る本文（HTML）のスタイル
.c-content {
  max-width: 800px;
  margin: 0 auto;
  font-size: 1.1rem;
  line-height: 1.8;

  // 記事内のスタイルを調整
  :global(p) {
    margin-bottom: 1.5em;
  }

  :global(h2) {
    font-size: 1.8rem;
    margin: 2em 0 1em;
    padding-left: 15px;
    border-left: 5px solid #333;
  }

  :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }

  :global(ul), :global(ol) {
    margin-bottom: 1.5em;
    padding-left: 1.5em;
  }
}
</style>
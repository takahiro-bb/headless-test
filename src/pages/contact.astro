---
import Layout from '../layouts/Layout.astro';
---

<Layout title="お問い合わせ | My Headless Site">
  <main class="l-main">
    <div class="p-contact">
      <h1 class="p-contact__title">Contact</h1>
      
      {/* フォーム本体 */}
      <form id="js-form" class="p-form">
        <div class="p-form__item">
          <label for="your-name">お名前</label>
          <input type="text" id="your-name" name="your-name" required />
        </div>
        
        <div class="p-form__item">
          <label for="your-email">メールアドレス</label>
          <input type="email" id="your-email" name="your-email" required />
        </div>
        
        <div class="p-form__item">
          <label for="your-message">メッセージ</label>
          <textarea id="your-message" name="your-message" rows="5"></textarea>
        </div>
        
        <button type="submit" class="c-btn-submit">送信する</button>
      </form>
      
      {/* 送信後のメッセージ表示用 */}
      <div id="js-success" class="p-form-msg --success" style="display:none;">
        <p>送信が完了しました。お問い合わせありがとうございます。</p>
        <a href="/" class="c-btn-back">トップへ戻る</a>
      </div>
      <div id="js-error" class="p-form-msg --error" style="display:none;">送信に失敗しました。</div>
    </div>
  </main>
</Layout>

<script is:inline>
  const form = document.getElementById('js-form');
  const successMsg = document.getElementById('js-success');
  const errorMsg = document.getElementById('js-error');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // 送信ボタンを無効化（二重送信防止）
    const submitBtn = form.querySelector('button');
    submitBtn.disabled = true;
    submitBtn.textContent = '送信中...';

    const formData = new FormData(form);

    // 【重要】ユニットタグの追加
    // 書式: wpcf7-f[フォームID]-p[固定ページID]-o1
    // フォームIDが不明な場合はひとまず29、ページIDも29で設定
    formData.append('_wpcf7_unit_tag', 'wpcf7-f29-p36-o1'); 

    try {
      // ここのURLの末尾「29」も実際のフォームID（数字）に書き換えてね！
      const url = 'https://xs688150.xsrv.jp/headless/wp-json/contact-form-7/v1/contact-forms/29/feedback';

      const response = await fetch(url, {
        method: 'POST',
        body: formData,
      });
      
      const result = await response.json();
      
      // 送信成功判定
      if (result.status === 'mail_sent') {
        form.style.display = 'none';
        successMsg.style.display = 'block';
        errorMsg.style.display = 'none';
      } else {
        // エラーメッセージがあれば表示
        throw new Error(result.message || '送信エラーが発生しました。');
      }
    } catch (err) {
      console.error('Error:', err);
      errorMsg.style.display = 'block';
      errorMsg.textContent = `エラー: ${err.message}`;
    } finally {
      // 失敗した場合のみボタンを元に戻す
      if (successMsg.style.display === 'none') {
        submitBtn.disabled = false;
        submitBtn.textContent = '送信する';
      }
    }
  });
</script>

<style lang="scss">
.p-contact {
  max-width: 800px;
  margin: 0 auto;
  padding: 60px 20px;

  &__title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 40px;
  }
}

.p-form {
  &__item {
    margin-bottom: 24px;
    
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }
    
    input, textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px; // モバイルでのズーム防止
      
      &:focus {
        outline: none;
        border-color: #333;
      }
    }
  }
}

.c-btn-submit {
  width: 100%;
  padding: 16px;
  background: #333;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: opacity 0.3s;

  &:hover { opacity: 0.8; }
  &:disabled { background: #ccc; cursor: not-allowed; }
}

.p-form-msg {
  padding: 30px;
  text-align: center;
  border-radius: 4px;

  &.--success {
    background: #f0fdf4;
    color: #166534;
    border: 1px solid #bbf7d0;
  }

  &.--error {
    background: #fef2f2;
    color: #991b1b;
    border: 1px solid #fecaca;
  }
}

.c-btn-back {
  display: inline-block;
  margin-top: 20px;
  color: #333;
  text-decoration: underline;
}
</style>
---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import MainSlider from '../components/MainSlider.astro';

const response = await fetch(import.meta.env.WORDPRESS_API_URL, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
      query GetLatestPosts {
        posts(first: 6, where: { categoryNotIn: ["5"] }) {
          nodes {
            id
            title
            slug
            date
            categories {
              nodes {
                name
                slug
              }
            }
            featuredImage {
              node {
                sourceUrl
                altText
              }
            }
          }
        }
      }
    `,
  }),
});

const { data } = await response.json();
const latestPosts = data?.posts?.nodes || [];
---

<Layout title="TOP | My Headless Site">
  <MainSlider />
  <Breadcrumbs items={[]} />

  <section class="p-top-posts">
    <div class="l-container">
      <div class="p-top-posts__head">
        <h2 class="c-sec-title">Latest News</h2>
        <a href="/posts/list" class="c-btn">View All</a>
      </div>

      <div class="p-post-list">
        {latestPosts.map((post) => (
          <article class="p-post-card">
            <a href={`/posts/${post.slug}`} class="p-post-card__link">
              <div class="p-post-card__img">
                {post.featuredImage ? (
                  <img src={post.featuredImage.node.sourceUrl} alt={post.featuredImage.node.altText || post.title} />
                ) : (
                  <div class="c-no-image">No Image</div>
                )}
              </div>
              <div class="p-post-card__content">
                <time class="p-post-card__date">{new Date(post.date).toLocaleDateString()}</time>
                <div class="p-post-card__categories">
                  {post.categories.nodes.map((cat) => (
                    <span class="c-category-label">{cat.name}</span>
                  ))}
                </div>
                <h3 class="p-post-card__title">{post.title}</h3>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style lang="scss">
.c-sec-title {
  font-size: 2rem;
  font-weight: 700;
  position: relative;
  padding-bottom: 15px;

  &::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 60px;
    height: 4px;
    background: #333;
  }
}

.p-top-posts {
  padding: 80px 0;

  &__head {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 40px;
  }
}

.p-post-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
}

.p-post-card {
  &__link {
    text-decoration: none;
    color: inherit;
    display: block;

    &:hover {
      .p-post-card__img img {
        transform: scale(1.05);
      }
    }
  }

  &__img {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #eee;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
  }

  &__content {
    padding-top: 15px;
  }

  &__date {
    font-size: 0.85rem;
    color: #888;
  }

  &__title {
    font-size: 1.1rem;
    margin-top: 5px;
    line-height: 1.5;
  }

  &__categories {
    margin: 8px 0;
  }
}
</style>
// src/components/GalleryList.astro
const response = await fetch(import.meta.env.WORDPRESS_API_URL, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
      query GetGallery {
        galleries(first: 20) {
          nodes {
            id
            title
            galleryFields {
              galleryImage {
                node {
                  sourceUrl
                }
              }
            }
          }
        }
      }
    `,
  }),
});

const json = await response.json();
const galleryItems = json.data?.galleries?.nodes || [];
---

<section class="p-gallery">
  <div class="l-container">
    <h2 class="c-sec-title">Cat Gallery</h2>
    
    <div class="p-gallery__grid">
      {galleryItems.map((item, index) => {
        const imageUrl = item.galleryFields?.galleryImage?.node?.sourceUrl;
        return imageUrl && (
          <div class="p-gallery__item js-fade-in">
            <button 
              class="p-gallery__button js-modal-open" 
              data-index={index}
              data-image={imageUrl}
              data-title={item.title}
            >
              <figure class="p-gallery__figure">
                <img src={imageUrl} alt={item.title} loading="lazy" />
                <figcaption class="p-gallery__caption">{item.title}</figcaption>
              </figure>
            </button>
          </div>
        );
      })}
    </div>
  </div>
</section>

<div class="c-modal" id="js-modal" aria-hidden="true">
  <div class="c-modal__bg js-modal-close"></div>
  
  <div class="c-modal__content">
    <div class="c-modal__img-wrapper">
      <img src="" alt="" id="js-modal-img" />
      <p id="js-modal-title" class="c-modal__title"></p>
    </div>
    
    <button class="c-modal__nav c-modal__nav--prev" id="js-modal-prev" aria-label="前へ"></button>
    <button class="c-modal__nav c-modal__nav--next" id="js-modal-next" aria-label="次へ"></button>
    <button class="c-modal__close js-modal-close" aria-label="閉じる">×</button>
  </div>
</div>

<script>
  const modal = document.getElementById('js-modal');
  const modalImg = document.getElementById('js-modal-img') as HTMLImageElement;
  const modalTitle = document.getElementById('js-modal-title') as HTMLElement;
  const btnPrev = document.getElementById('js-modal-prev');
  const btnNext = document.getElementById('js-modal-next');
  
  const items = document.querySelectorAll('.js-modal-open');
  let currentIndex = 0;

  // モーダルの中身を更新するメイン関数
  const updateModal = (index: number) => {
    const target = items[index];
    if (!target || !modalImg || !modalTitle) return;
    
    const src = target.getAttribute('data-image');
    const title = target.getAttribute('data-title');
    
    // アニメーション：一旦透明にして動かす
    modalImg.style.opacity = '0';
    modalImg.style.transform = 'scale(0.95)';
    modalTitle.style.opacity = '0';
    modalTitle.style.transform = 'translateY(10px)';

    setTimeout(() => {
      if (src) {
        modalImg.src = src;
        // 画像の読み込みが完了してから表示（チラつき防止）
        modalImg.onload = () => {
          modalImg.style.opacity = '1';
          modalImg.style.transform = 'scale(1)';
        };
      }
      
      if (title) {
        modalTitle.textContent = title;
        modalTitle.style.opacity = '1';
        modalTitle.style.transform = 'translateY(0)';
      }
    }, 250); 
    
    currentIndex = index;
  };

  // 開く
  items.forEach((btn, index) => {
    btn.addEventListener('click', () => {
      if (modal) {
        modal.classList.add('is-open');
        document.body.style.overflow = 'hidden';
        updateModal(index);
      }
    });
  });

  // 閉じる
  document.querySelectorAll('.js-modal-close').forEach(el => {
    el.addEventListener('click', () => {
      modal?.classList.remove('is-open');
      document.body.style.overflow = '';
      // 閉じた後は中身をクリア
      setTimeout(() => {
        if(modalImg) modalImg.src = "";
        if(modalTitle) modalTitle.textContent = "";
      }, 400);
    });
  });

  // 前後移動
  btnPrev?.addEventListener('click', (e) => {
    e.stopPropagation();
    const newIndex = (currentIndex > 0) ? currentIndex - 1 : items.length - 1;
    updateModal(newIndex);
  });

  btnNext?.addEventListener('click', (e) => {
    e.stopPropagation();
    const newIndex = (currentIndex < items.length - 1) ? currentIndex + 1 : 0;
    updateModal(newIndex);
  });

  // キーボード操作
  window.addEventListener('keydown', (e) => {
    if (!modal?.classList.contains('is-open')) return;
    if (e.key === 'Escape') modal.classList.remove('is-open');
    if (e.key === 'ArrowLeft') btnPrev?.click();
    if (e.key === 'ArrowRight') btnNext?.click();
  });

  // 一覧のフェードイン（Intersection Observer）
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });
  document.querySelectorAll('.js-fade-in').forEach(el => observer.observe(el));
</script>

<style lang="scss">
.p-gallery {
  padding: 80px 0;
  &__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 24px;
    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }
  }
  &__item {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
    &.is-visible { opacity: 1; transform: translateY(0); }
  }
  &__button {
    background: none; border: none; padding: 0; cursor: pointer; width: 100%;
    border-radius: 12px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    &:hover img { transform: scale(1.08); }
  }
  &__figure {
    margin: 0; position: relative; aspect-ratio: 1/1; overflow: hidden;
    img { width: 100%; height: 100%; object-fit: cover; transition: 0.5s ease; }
  }
  &__caption {
    padding: 12px; background: #fff; font-weight: 600; text-align: center;
    font-family: sans-serif; // お好みのフォントに
  }
}

.c-modal {
  position: fixed; inset: 0; z-index: 1000;
  display: flex; align-items: center; justify-content: center;
  opacity: 0; visibility: hidden; transition: 0.4s cubic-bezier(0.25, 1, 0.5, 1);

  &.is-open {
    opacity: 1; visibility: visible;
  }

  &__bg {
    position: absolute; inset: 0; background: rgba(0, 0, 0, 0.9); backdrop-filter: blur(5px);
  }

  &__content {
    position: relative; z-index: 10; width: 90%; max-width: 1000px;
  }

  &__img-wrapper {
    text-align: center;
    img {
      max-width: 100%; max-height: 80vh; border-radius: 4px;
      box-shadow: 0 0 30px rgba(0,0,0,0.5);
      transition: opacity 0.4s ease, transform 0.4s ease; // アニメーションの要
      opacity: 0; // 初期状態
    }
  }

  &__title {
    color: #fff; margin-top: 15px; font-size: 1.2rem; font-weight: bold;
    letter-spacing: 0.05em; text-align: center;
    transition: opacity 0.4s ease, transform 0.4s ease;
    opacity: 0; // 初期状態
  }

  &__close {
    position: absolute; top: -50px; right: 0; background: none; border: none;
    color: #fff; font-size: 40px; cursor: pointer; line-height: 1;
  }

  &__nav {
    position: absolute; top: 50%; transform: translateY(-50%);
    width: 50px; height: 50px; background: rgba(255,255,255,0.15);
    border: none; border-radius: 50%; cursor: pointer; transition: 0.3s;
    &::before {
      content: ""; position: absolute; top: 50%; left: 50%;
      width: 12px; height: 12px; border-top: 3px solid #fff; border-right: 3px solid #fff;
    }
    &:hover { background: rgba(255,255,255,0.3); }
    &--prev {
      left: -70px; @media (max-width: 1200px) { left: 10px; }
      &::before { transform: translate(-30%, -50%) rotate(-135deg); }
    }
    &--next {
      right: -70px; @media (max-width: 1200px) { right: 10px; }
      &::before { transform: translate(-70%, -50%) rotate(45deg); }
    }
  }
}
</style>
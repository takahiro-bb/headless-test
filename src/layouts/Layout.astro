---
// src/layouts/Layout.astro
import '../styles/global.scss';
import Header from '../components/Header.astro'; // ★追加
import Footer from '../components/Footer.astro'; // ★追加

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="l-body">
    <Header />
		<slot />
    <Footer />
	</body>
</html>

<style lang="scss">
// フッターを常に下に配置するためのスタイル
.l-body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
</style>